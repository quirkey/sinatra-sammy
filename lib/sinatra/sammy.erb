<%= jquery_js %>
<script type="text/javascript" charset="utf-8">
  <%= sammy_js %>
  (function($) {
    var app = $.sammy(function() { with(this) {
      
      get(/\#(.*)$/, function() { with(this) {
        partial(params['splat'] + '?_sammy=true');
      }});
      
    }});
    
    $(function() {
      <% @sammy_options.each do |option, value| %>
      app.<%= option %> = <%= value.inspect %>;
      <% end %>
      app.run('#/');
    });
  })(jQuery);
</script>