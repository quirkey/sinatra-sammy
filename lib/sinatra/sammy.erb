<%= jquery_js %>
<script type="text/javascript" charset="utf-8">
  <%= sammy_js %>
  (function($) {
    $.sammy(function() { with(this) {
      
      get(/\#(.*)$/, function() { with(this) {
        partial(params['splat']);
      }});
      
    }});
    
    $(function() {
      <% @sammy_options.each do |option, value| %>
      app.<%= option %> = <%= value.inspect %>;
      <% end %>
      app.run('#/');
    });
  })(jQuery);
</script>